@model AspWorkshop.Models.GuestResponse

@{
    ViewBag.Title = "RsvpForm";
}


<div class="panel panel-success">
    <div class="panel-heading text-center"><h2>RsvpForm</h2></div>
    <div class="panel-body">
        @using (Html.BeginForm()) {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>Imię i nazwisko</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>


            <div class="form-group">
                <label>Twój e-mail: </label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Twój telefon:</label>
                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
            </div>


            <div class="form-group">
                <label>Czy przyjdziesz na impreze?</label>
                @Html.DropDownListFor(x => x.WillAttend, new[]
                {
                    new SelectListItem() {Text = "Tak przyjdę.", Value = bool.TrueString},
                    new SelectListItem() {Text = "Nie, nie przyjdę.", Value = bool.FalseString},
                }, "Wybierz opcjeę", new {@class = "form-control"})
            </div>
            <div class="text-center">
                <input class="btn btn-success" type="submit" value="Wyślij RSVP" />
            </div>
        }
    </div>
</div>
